<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/txtProductName"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Đơn giá và danh mục -->
        <TextView
            android:id="@+id/txtProductPrice"
            android:text="Đơn giá: 20,000 VNĐ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtProductCategory"
            android:text="Danh mục: Đồ uống"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- Tăng giảm số lượng và tổng tiền -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nút giảm -->
            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/arrow_down_float"
                android:background="@android:color/darker_gray"
                android:contentDescription="Giảm" />

            <!-- Số lượng -->
            <TextView
                android:id="@+id/txtQuantity"
                android:text="1"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <!-- Nút tăng -->
            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/arrow_up_float"
                android:background="@android:color/darker_gray"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:contentDescription="Tăng" />

            <!-- Tổng tiền -->
            <TextView
                android:id="@+id/txtItemTotal"
                android:text="Thành tiền: 20,000 VNĐ"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
